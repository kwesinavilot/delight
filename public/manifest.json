{
  "manifest_version": 3,
  "name": "Delight",
  "version": "1.0.0",
  "description": "Multi-provider AI chat and page summaries with support for OpenAI, Anthropic, Gemini, Grok, Groq, and SambaNova",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "16": "icons/delight-icon.png",
      "48": "icons/delight-icon.png",
      "128": "icons/delight-icon.png"
    }
  },
  "side_panel": {
    "default_path": "src/pages/sidepanel/index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/delight-icon.png",
    "48": "icons/delight-icon.png",
    "128": "icons/delight-icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open Delight"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/pages/welcome/index.html",
        "src/pages/sidepanel/index.html",
        "src/pages/userguide/index.html",
        "src/pages/privacy/index.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}