{
  "manifest_version": 3,
  "name": "Delight: 30+ AI models & Agents For Productivity",
  "version": "1.4.3",
  "description": "Multi-agent AI assistant to boost your productivity. Access 30+ models, automate tasks, enhance writing and speed up work.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage",
    "tabs",
    "webNavigation",
    "debugger",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://us.i.posthog.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://us.i.posthog.com;"
  },
  "action": {
    "default_icon": {
      "16": "icons/delight-icon.png",
      "48": "icons/delight-icon.png",
      "128": "icons/delight-icon.png"
    }
  },
  "side_panel": {
    "default_path": "src/pages/sidepanel/index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/delight-icon.png",
    "48": "icons/delight-icon.png",
    "128": "icons/delight-icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open Delight"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/pages/welcome/index.html",
        "src/pages/sidepanel/index.html",
        "src/pages/userguide/index.html",
        "src/pages/privacy/index.html",
        "src/pages/updates/index.html",
        "src/pages/accuracy/index.html",
        "dom-analyzer.js",
        "advanced-dom-analyzer.js",
        "buildDomTree.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}